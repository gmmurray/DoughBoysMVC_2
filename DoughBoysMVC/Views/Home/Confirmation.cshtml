@model DoughBoysMVC.Models.CustomerOrder
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="navBar">
    <a href="Home" class="navLogo"><img src="~/images/logo.png"></a>
    <div id="navHeader">
        <ul>
            <li><a asp-action="Index">Home</a></li>
            <li><a asp-action="Menu">Menu</a></li>
            <li><a asp-action="PreOrder">Pre-Order</a></li>
            <li><a asp-action="Questions">FAQ</a></li>
            <li><a asp-action="AboutUs">About Us</a></li>
        </ul>
    </div>
</div>

<p>
    <h1>Thank you @Model.FirstName for your order</h1>
    An email will be sent to @Model.Email containing a copy of your order confirmation.
</p>
<h2>Order#@Model.OrderNo Details</h2>
<div class="confTableContainer">
    <table class="confTable">
        <tr class="confTableHead">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Pickup Date</th>
            <th>Doughnut</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>

        <tr class="confTableElement">
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.PhoneNo</td>
            <td>@Model.Email</td>
            <td>@Model.PickUpDate</td>
            <td>@Model.DoughnutType</td>
            <td>@Model.Quantity</td>
            <td>$@Model.TotalCost</td>
        </tr>
    </table>
</div>

